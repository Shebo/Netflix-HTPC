{
  "name": "Netflix HTPC",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Use Netflix as an HTPC friendly website, controlled by your weapon of choice",
  // "homepage_url": "",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  // "options_page": "src/options_custom/index.html",
  "options_page": "src/options/index.html",
  "page_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "page action demo",
    "default_popup": "src/page_action/page_action.html"
  },
  "permissions": [
    "*://www.netflix.com/*",
    "*://www.google.co.il/*",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://www.google.co.il/*",
        "*://www.netflix.com/*"
      ],
      "css": [
        "src/inject/css/inject.css"
      ],
      "js": [
        "js/jquery/jquery.min.js",
        "js/underscore-min.js",
        "js/event.simulate.js",
        "js/jquery.simulate.js",
        "js/keyboard.js",
        "src/inject/js/class.js",
        "src/inject/js/inject.js"
      ],
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    // "js/jquery/jquery.min.js",
    "src/inject/js/controller.js"
  ],
  "externally_connectable": {
    "matches": ["*://*.netflix.com/*"]
  }
}